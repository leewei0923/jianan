/* 图片展示滑块 */

.container .photoShow {
    width: 100%;
    height: 100%;
}

.container .photoShow .slide-image {
    width: 100%;
    height: 100%;
}

.container .photoShow .photoTxt {
    position: absolute;
    color: white;
}


/* 标语处 */

.container .slogan {
    width: 100%;
    height: 50px;
    background-color: black;
    position: relative;
    display: flex;
    flex-direction: row;
}

.container .slogan .slo_logo {
    position: relative;
    left: 20px;
    width: 80px;
    height: 40px;
    top: 5px;
}

.container .slogan .slo_txt {
    color: white;
    position: relative;
    left: 60px;
    font-size: 20px;
    top: 10px;
    letter-spacing: 30px;
    font: 100;
}


/* -------------------------------------------- */


/* 选项栏跳转 */

.container .navigationGo {
    width: 95%;
    height: 300rpx;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(2, 1fr);
    background-color: #F0F0F0;
    padding: 10px;
}

.container .navigationGo .navBox .navImgShow {
    width: 100rpx;
    height: 100rpx;
    background-color: chocolate;
    border-radius: 50%;
    display: flex;
    margin: auto;
}

.container .navigationGo .navBox .navTxt {
    font-size: 30rpx;
    display: block;
    text-align: center;
    color: #5E5E5E;
}


