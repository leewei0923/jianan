/* 学院头条 */

.QCHot_logo {
    width: 100%;
}

.QCHot_logo .column {
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    background: #fff;
    border-bottom: solid 1px #eee;
    top: 0;
    left: 0;
    z-index: 100;
}

.QCHot_logo .column.fixed {
    position: fixed;
}

.QCHot_logo .column .block {
    width: 25%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 30rpx;
    color: #333;
    letter-spacing: 1px;
    position: relative;
}

.QCHot_logo .column .block::after {
    content: "";
    width: 60%;
    height: 3px;
    border-radius: 2px;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    background: transparent;
}

.QCHot_logo .column .block.active {
    color: #1490ce;
    font-weight: bold;
}

.QCHot_logo .column .block.active::after {
    background: linear-gradient(160deg, rgba(8, 220, 230, 0.7) 10%, rgba(0, 140, 255, 0.7) 90%);
}